@{
    ViewBag.Title = "Login";
    Layout = "_Layout";
}

<div class="login-container">
    <h3>Bienvenido a UBAM Intranet</h3>
    <form class="form" role="form" action="javascript:login();">
        <div class="form-group">
            <input type="text" id="username" class="form-control" placeholder="Usuario" required>
        </div>
        <div class="form-group">
            <input type="password" id="password" class="form-control" placeholder="Contraseña" required>
        </div>
        <button type="submit" class="btn btn-primary full-width">Iniciar Sesión</button>
    </form>
    <p class="mt-4">&copy; Universidad Bancaria de México - Todos los derechos reservados</p>
</div>

@section Scripts {
    <script src="~/js/account/login.js"></script>

}
