@{
    ViewBag.Title = "Register";
    Layout = "_Layout";
}

<div class="register-container">
    <h3>Registrarse en UBAM Intranet</h3>
    <form class="form" role="form" action="javascript:register();">
        <div class="form-group">
            <input type="text" id="username" class="form-control" placeholder="Usuario" required>
        </div>
        <div class="form-group">
            <input type="password" id="password" class="form-control" placeholder="Contraseña" required>
        </div>
        <div class="form-group">
            <input type="password" id="confirmPassword" class="form-control" placeholder="Confirmar Contraseña" required>
        </div>
        <button type="submit" class="btn btn-primary full-width">Registrarse</button>
    </form>
</div>

@section Scripts {
    <script src="~/js/account/register.js"></script>
}
