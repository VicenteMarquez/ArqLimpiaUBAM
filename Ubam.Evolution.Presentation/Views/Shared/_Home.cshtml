@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<header class="m-4">
    <!-- Navbar -->
    <nav class="navbar navbar-expand-md border-2 rounded-3 shadow-sm p-3" style="background-color: var(--color-beige)">
        <div class="container">
            <!-- Logo -->
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="~/images/oso-polar.png" alt="Logo" class="me-2" height="30">
            </a>

            <!-- Toggle Button for Mobile -->
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <img src="~/images/Icons/Burger.svg" loading="lazy" alt="burger" height="24" width="24"/>
            </button>

            <!-- Navigation Links -->
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    @if (User.IsInRole("Administrador"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-secondary" href="agregar-usuario">Usuario</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary" href="docentes">Docentes</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-secondary" href="alumnos">Alumnos</a>
                        </li>
                    }
                    else if (User.IsInRole("Docente"))
                    {
                        <li class="nav-item">
                            <a class="nav-link text-secondary" href="alumnos">Alumnos</a>
                        </li>
                    }

                    <!-- Perfil dropdown -->
                    <li class="nav-item dropdown">
                        <a class="nav-link text-secondary dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown"
                           aria-expanded="false">
                            Perfil
                        </a>
                        <ul class="dropdown-menu text-secondary" style="background-color: var(--color-cream)">
                            <li>
                                <a class="dropdown-item" href="/">Inicio</a>
                            </li>
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li>
                                <a class="dropdown-item" href="#" data-bs-toggle="modal"
                                   data-bs-target="#staticBackdrop">Cerrar sesión</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>


<!-- Modal -->
<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
     aria-labelledby="staticBackdropLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content" style="background-color: var(--color-cream)">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="staticBackdropLabel">Cerrar sesión</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                ¿Quieres cerrar sesión?
            </div>
            <div class="modal-footer">
                <form id="logout-form" action="/Auth/Logout" method="post">
                    <button type="submit" class="btn fw-bold text-white"
                            style="background-color: var(--color-dark-blue)">
                        Cerrar sesión
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>


<div>
    @RenderBody()
</div>